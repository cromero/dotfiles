;;; This is my default .emacs file that sets up very little on its own
;;; as it assumes that prelude and emacs 24 are in use
;; variables
(setq projectile-enable-caching t)
(setq whitespace-line-column 100)
(setq-default cursor-type 'bar)
;; modes
(tool-bar-mode nil)
(scroll-bar-mode 0)
;; key bindings
;; buffers
(windmove-default-keybindings)
;; grepping
(global-set-key (kbd "C-x g g") 'grep)
(global-set-key (kbd "C-x g l") 'lgrep)
(global-set-key (kbd "C-x g r") 'rgrep)
;; dot_emacs ends here
