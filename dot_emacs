;;; dot_emacs --- minimal
;;;
;;; This is my default .emacs file that sets up very little on its own
;;; as it expects emacs 25.1+ with prelude being loaded via
;;; .emacs.d/init.el. Learn more at https://github.com/bbatsov/prelude

;; load prelude
(load "~/.emacs.d/init.el")
;; use-package for convenient lazy-loading and installing packages used here
(unless (package-installed-p 'use-package)
  (package-refresh-contents)
  (package-install 'use-package))
;; theme
(use-package monokai-theme
  :ensure t
  :config
  (load-theme 'monokai t))
;; variables
(setq-default cursor-type 'bar)
(setq prelude-flyspell nil)
(setq projectile-completion-system 'grizzl)
(setq projectile-enable-caching t)
(set-default 'truncate-lines t)
(setq truncate-partial-width-windows nil)
(setq whitespace-line-column 99)
(setq whitespace-global-modes t)        ; automatically enable ws mode
;; modes
;; malabar mode for Java. See https://github.com/m0smith/malabar-mode
(when (require 'malabar-mode nil 'noerror)
  (add-to-list 'auto-mode-alist '("\\.java\\'" . malabar-mode))
  (setq malabar-mode-key-prefix (kbd "C-c C-j"))
  ;; truncate lines and add semantic code completion on '.' for malabar mode
  (add-hook 'malabar-mode-hook
            (lambda ()
              (toggle-truncate-lines 1)
              (local-set-key "C-;" 'semantic-ia-complete-symbol))))
;; elpy-mode for .py files
(use-package elpy
    :ensure t
    :config
    (elpy-enable)
    (add-hook 'python-mode-hook
              (lambda ()
                (elpy-mode)
                (setq elpy-rpc-python-command "python3")
                (flycheck-mode)
                (setq flycheck-flake8-maximum-line-length 99)
                (flymake-mode-off))))
;; built-in modes
(tool-bar-mode 0)
(scroll-bar-mode 0)
;; key bindings
;; buffers
(windmove-default-keybindings)
(when (require 'switch-window nil 'noerror)
  (global-set-key (kbd "C-x o") 'switch-window))
;; resizing windows
(global-set-key (kbd "S-C-<left>") 'shrink-window-horizontally)
(global-set-key (kbd "S-C-<right>") 'enlarge-window-horizontally)
(global-set-key (kbd "S-C-<down>") 'shrink-window)
(global-set-key (kbd "S-C-<up>") 'enlarge-window)
;; better search
(use-package swiper
    :ensure t
    :bind (("C-s" . swiper)))
;; better M-x completion
(use-package smex
  :ensure t
  :bind
  (("M-x" . smex)
   ("M-X" . smex-major-mode-commands))
  :config
  (smex-initialize))
;; helm for auto completion
(use-package helm
    :ensure t
    :config
    (helm-mode 1)
    (setq projectile-completion-system 'helm))
;;; dot_emacs ends here
